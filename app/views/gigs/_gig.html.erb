<div class="col">
  <div class="card shadow-sm">
    <% if gig.image.attached? %>
      <%= image_tag gig.image, class: "card-img-top", alt: "Gig image" %>
    <% end %>
    <div class="card-body">
      <h4 class="card-title"><%= link_to gig.gig_name, gig_path(gig) %></h4>
      <p ><%= gig.date.strftime("%m月%d日") %></p>
      <p><%= truncate(gig.description, length: 100) %></p>
      <div class="d-flex justify-content-between align-items-center">
      </div>
    </div>
  </div>
</div>
