<% @gigs.each do |gig| %>
  <div class="col">
    <div class="card shadow-sm" style="height: 100%; display: flex; flex-direction: column;">
      <%= link_to gig_path(gig.id) do %>
        <%= image_tag gig.image, class: "card-img-top", style: "height: 200px; object-fit: cover;", alt: "#{gig.gig_name} image" %>
      <% end %>
      <div class="card-body" style="flex: 1; display: flex; flex-direction: column; justify-content: flex-end;">
        <h5 class="card-title">
          <%= link_to gig.gig_name, gig_path(gig.id), class: "stretched-link" %>
        </h5>
      </div>
    </div>
  </div>
<% end %>