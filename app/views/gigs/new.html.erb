<div class="container mt-5">
  <div class="text-center">
    <h1 class="mb-4">出演情報追加フォーム</h1>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <%= form_with model: @gig, local: true do |form| %>
        
        <!-- 出演名 -->
        <div class="mb-3">
          <%= form.label :gig_name, 'イベント名' %>
          <%= form.text_field :gig_name, class: "form-control", required: true %>
        </div>
        
        <!-- 説明 -->
        <div class="mb-3">
          <%= form.label :description, 'イベント概要' %>
          <%= form.text_area :description, class: "form-control", required: true %>
        </div>
        
        <!-- リンク入力欄 -->
        <div id="links_container" class="mb-3">
          <div class="row">
            <div class="col-4">
              <%= form.label :link_name, "リンク名" %>
              <%= form.text_field :link_name, class: "form-control" %>
            </div>
            <div class="col">
              <%= form.label :link_url, "リンクURL" %>
              <%= form.text_field :link_url, class: "form-control" %>
            </div>
          </div>
        </div>
        
        <!-- 画像 -->
        <div class="mb-3">
          <%= form.label :image, 'イベントロゴ' %>
          <%= form.file_field :image, class: "form-control" %>
        </div>
        
        <!-- 登録ボタン -->
        <div class="d-flex justify-content-end">
          <%= link_to "戻る", gigs_path, class: "btn btn-secondary btn-lg me-3" %>
          <%= form.submit '登録', class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
