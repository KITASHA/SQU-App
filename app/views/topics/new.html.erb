<div class="container mt-5">
  <div class="row justify-content-center"style="padding-top: 3rem;">
    <div class="col-lg-5 col-md-10 col-sm-12">

      <%= form_with(model: @topic, local: true) do |form| %>
        
        <div class="form-group mb-4">
          <%= form.label :date, "日付", class: 'form-label' %>
          <%= form.date_field :date, class: 'form-control', required: true %>
          <div class="invalid-feedback">日付を入力してください。</div>
        </div>

        <div class="form-group mb-4">
          <%= form.label :news, "ニュース", class: 'form-label' %>
          <%= form.text_field :news, class: 'form-control', required: true , maxlength: 50 %>
          <div class="invalid-feedback">入力してください。</div>
        </div>

        <div class="form-group d-flex justify-content-end">
          <%= link_to "戻る", topics_path, class: "btn btn-secondary me-3" %>
          <%= form.submit "保存", class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
