<%= form_with(model: @event, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(@event.errors.count, "error") %>がこのイベントの保存を妨げています:</h4>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :date, "日付", class: 'form-label' %>
    <%= form.date_field :date, class: 'form-control', required: true %>
    <div class="invalid-feedback">日付を入力してください。</div>
  </div>

  <div class="form-group">
    <%= form.label :start_time, "開始時間", class: 'form-label' %>
    <%= form.time_field :start_time, class: 'form-control', required: true %>
    <div class="invalid-feedback">開始時間を入力してください。</div>
  </div>

  <div class="form-group">
    <%= form.label :finish_time, "終了時間", class: 'form-label' %>
    <%= form.time_field :finish_time, class: 'form-control', required: true %>
    <div class="invalid-feedback">終了時間を入力してください。</div>
  </div>

  <div class="form-group">
    <%= form.label :location, "場所", class: 'form-label' %>
    <%= form.text_field :location, class: 'form-control', required: true %>
    <div class="invalid-feedback">場所を入力してください。</div>
  </div>

  <div class="form-group">
    <%= form.submit "保存", class: 'btn btn-primary' %>
  </div>
<% end %>

<script>
  // フォームのクライアントサイドバリデーション
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      // フォームのすべての要素を取得
      var forms = document.getElementsByClassName('needs-validation');
      // ループを通じてバリデーションを適用
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>
