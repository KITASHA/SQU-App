<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col-md-11" style="margin-bottom: 20px;">
            <h3><%= @song_1.song_title %></h3>
            <!-- これがテーブルのヘッダ行です -->
            <table class="table" style="margin: 20px;">
                <thead>
                    <tr>
                        <th>Part</th>
                        <% @bands_1.each do |part, _| %>
                            <th><%= part %></th>
                        <% end %>
                    </tr>
                </thead>
                <tbody>
                    <% max_band_count = @bands_1.values.map(&:size).max %>
                    <% max_band_count.times do |i| %>
                        <tr>
                            <td>Band<%= i+1 %></td>
                            <% @bands_1.each do |_, members| %>
                                <td><%= members[i] if members[i] %></td>
                            <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-md-11" style="margin-bottom: 20px;">
            <h3><%= @song_2.song_title %></h3>
            <!-- これがテーブルのヘッダ行です -->
            <table class="table" style="margin: 20px;">
                <thead>
                    <tr>
                        <th>Part</th>
                        <% @bands_2.each do |part, _| %>
                            <th><%= part %></th>
                        <% end %>
                    </tr>
                </thead>
                <tbody>
                    <% max_band_count = @bands_2.values.map(&:size).max %>
                    <% max_band_count.times do |i|%>
                        <tr>
                            <td>Band<%= i+1 %></td>
                            <% @bands_2.each do |_, members| %>
                                <td><%= members[i] if members[i] %></td>
                            <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="col-md-11" style="margin-bottom: 20px;">
    <button id="screenshot-button" class="btn btn-primary">画像を取得</button>
</div>