<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col-md-11" style="margin-bottom: 20px;">
            <h3><%= @song_1.song_title %></h3>
            <!-- これがテーブルのヘッダ行です -->
            <table class="table" style="margin: 20px;">
                <thead>
                    <tr>
                        <th>Part</th>
                        <th>Lead</th>
                        <th>1st</th>
                        <th>2nd</th>
                        <th>3rd</th>
                        <th>Bass</th>
                        <th>V.P</th>
                    </tr>
                </thead>
                <tbody>
                    <% max_band_count = @bands_1.values.map(&:size).max %>
                    <% max_band_count.times do |i|%>
                        <tr>
                            <td>Band<%= i+1 %></td>
                            <% @bands_1.sort.to_h.each do |part, members| %>
                                <td><%= members[i] %></td>
                            <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-md-11" style="margin-bottom: 20px;">
            <h3><%= @song_2.song_title %></h3>
