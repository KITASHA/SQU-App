<style>
  .flex-container {
    display: flex;
    align-items: center;
  }
  .flex-item {
    margin-right: 20px;
    width: 140px;
    height: 140px;
    overflow: hidden;
    border-radius: 10px;
  }
  .flex-item image {
    width: 100%;
    height: 100%;
  object-fit: cover;
