<div class="album py-5 bg-body-tertiary">
  <div class="container"style="padding-top: 5rem;">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <div class="col">
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-text">ユーザー情報の変更</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to edit_user_registration_path, class: "btn btn-sm btn-outline-secondary" do %>
                  こちらから &raquo;
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-text">Mすく発信内容変更</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to releases_path, class: "btn btn-sm btn-outline-secondary" do %>
                  <% if Release.exists? %>
                    こちらから &raquo;
                  <% else %>
                    新規作成 &raquo;
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-text">ニュースの追加・削除</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to topics_path, class: "btn btn-sm btn-outline-secondary" do %>
                  こちらから &raquo;
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>