<div class="container mt-5">
  <div class="row justify-content-center" style="padding-top: 5rem;">
    <div class="col-lg-5 col-md-10 col-sm-12">

      <h1 class="text-center mb-4">新しいリリースを作成</h1>

      <%= form_with model: @release, local: true do |form| %>
        
        <% if @release.errors.any? %>
          <div id="error_explanation" class="alert alert-danger mb-4">
            <h2><%= pluralize(@release.errors.count, "error") %> prohibited this release from being saved:</h2>
            <ul>
              <% @release.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group mb-4">
          <%= form.label :title, "タイトル", class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control', required: true %>
          <div class="invalid-feedback">タイトルを入力してください。</div>
        </div>

        <div class="form-group mb-4">
          <%= form.label :body, "本文", class: 'form-label' %>
          <%= form.text_area :body, class: 'form-control', rows: 4, required: true %>
          <div class="invalid-feedback">本文を入力してください。</div>
        </div>

        <div class="form-group mb-4">
          <%= form.label :image, "画像", class: 'form-label' %>
          <%= form.file_field :image, class: 'form-control', accept: 'image/*' %>
          <div class="invalid-feedback">画像を選択してください。</div>
        </div>

        <div class="form-group mb-4">
          <%= form.label :form_url, "フォームのURL", class: 'form-label' %>
          <%= form.text_field :form_url, class: 'form-control' %>
          <div class="invalid-feedback">フォームのURLを入力してください。</div>
        </div>

        <div class="form-group d-flex justify-content-end">
          <%= link_to "戻る", option_home_path, class: "btn btn-secondary me-3" %>
          <%= form.submit "保存", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
