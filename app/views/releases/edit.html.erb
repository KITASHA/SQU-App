<div class="container mt-5">
  <div class="row justify-content-center" style="padding-top: 5rem;">
    <div class="col-lg-6 col-md-10 col-sm-12">
      <%= form_with model: @release, local: true do |form| %>
        <div class="container mt-5">
          <h3 class="text-center mb-4">リリースを編集</h3>

          <!-- タイトル入力 -->
          <div class="form-group mb-4">
            <%= form.label :title, "タイトル", class: 'form-label' %>
            <%= form.text_field :title, class: 'form-control', value: @release.title, required: true %>
            <div class="invalid-feedback">タイトルを入力してください。</div>
          </div>

          <!-- 本文入力 -->
          <div class="form-group mb-4">
            <%= form.label :body, "本文", class: 'form-label' %>
            <%= form.text_area :body, class: 'form-control', rows: 12, required: true do %>
              <%= @release.body %>
            <% end %>
            <div class="invalid-feedback">本文を入力してください。</div>
          </div>

          <!-- 画像アップロード -->
          <div class="form-group mb-4">
            <%= form.label :image, "画像をアップロード", class: 'form-label' %>
            <%= form.file_field :image, class: 'form-control' %>
          </div>

          <div class="form-group mb-4">
          <%= form.label :form_text, "フォームのテキスト", class: 'form-label' %>
          <%= form.text_field :form_text, class: 'form-control' %>
          <div class="invalid-feedback">フォームボタンに表示するテキストを入力してください。</div>
          </div>

          <div class="form-group mb-4">
            <%= form.label :form_url, "フォームのURL", class: 'form-label' %>
            <%= form.text_field :form_url, class: 'form-control' %>
            <div class="invalid-feedback">フォームのURLを入力してください。</div>
          </div>

          <!-- フォーム送信ボタン -->
          <div class="text-center mt-4 d-flex justify-content-end">
            <div class="row justify-content-center">
              <div class="col-auto">
                <%= form.submit "更新", class: "btn btn-primary" %>
              </div>
              <div class="col-auto">  
                <%= link_to "戻る", releases_path, class: "btn btn-secondary me-3" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>